# =============================================================================
# EndeavourOS i3 Config - Módosított verzió (Sorszámozott & Automatikus rendelés nélkül)
# =============================================================================

# --- ALAPBEÁLLÍTÁSOK ÉS VÁLTOZÓK ---
font pango: Noto Sans Regular 10
set $mod Mod4
floating_modifier $mod
new_window pixel 1
gaps inner 6
gaps outer 3

# Munkaterületek elnevezése - Kicseréltem tisztán számokra, ahogy kérted
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Munkaterületek hozzárendelése monitorokhoz
workspace $ws1 output HDMI-3
workspace $ws2 output HDMI-3
workspace $ws3 output HDMI-3
workspace $ws4 output HDMI-3
workspace $ws5 output HDMI-3

workspace $ws6 output DVI-D-1
workspace $ws7 output DVI-D-1
workspace $ws8 output DVI-D-1
workspace $ws9 output DVI-D-1
workspace $ws10 output DVI-D-1

# --- SZÍNVÁLTOZÓK ---
set $bg-color            #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676e7d
set $urgent-bg-color     #e53935
set $focus-color         #807dfe

# --- AUTOSTART ---
exec_always --no-startup-id ~/.config/i3/scripts/import-gsettings
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id ~/.screenlayout/monitor.sh
exec --no-startup-id feh --bg-fill /home/drszigetib/Képek/UPSCfreepik__asian-martial-artist-young-woman-short-black-hair-__80882.png --bg-fill /home/drszigetib/Képek/freepik__fantasy-asian-martial-artist-young-woman-with-shor__90225_1.png
exec --no-startup-id xset s 480 dpms 600 600 600
exec --no-startup-id /usr/bin/dunst
exec --no-startup-id xss-lock -l ~/.config/i3/scripts/blur-lock

# --- BILLENTYŰPARANCSOK (Rendszer) ---
bindsym $mod+Return      exec --no-startup-id xfce4-terminal
bindsym $mod+q            kill
bindsym $mod+d            exec --no-startup-id rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi
bindsym $mod+Shift+e      exec --no-startup-id ~/.config/i3/scripts/powermenu
bindsym $mod+l            exec --no-startup-id ~/.config/i3/scripts/blur-lock
bindsym $mod+Shift+c      reload
bindsym $mod+Shift+r      restart
bindsym $mod+t	exec --no-startup-id thunar
bindsym $mod+b	exec --no-startup-id chromium

# --- MULTIMÉDIA ÉS FUNKCIÓBILLENTYŰK ---
bindsym XF86AudioRaiseVolume  exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
bindsym XF86AudioLowerVolume  exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
bindsym XF86AudioMute          exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute
bindsym XF86MonBrightnessUp   exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down
bindsym XF86AudioPlay          exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext          exec --no-startup-id playerctl next
bindsym XF86AudioPrev          exec --no-startup-id playerctl previous

# --- ABLAKKEZELÉS ---
#bindsym $mod+j focus left
#bindsym $mod+k focus down
#bindsym $mod+b focus up
#bindsym $mod+o focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+b move up
bindsym $mod+Shift+o move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+g layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# --- WORKSPACE VÁLTÁS (Sorszámok szerint) ---
# Itt bindsym-et használtam a bindcode helyett, mert olvashatóbb
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Munkaterületre mozgatás
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# --- ALKALMAZÁS SZABÁLYOK ---
# KIKOMMENTELVE: Így nem fognak automatikusan bizonyos asztalra nyílni
# assign [class="Xfce4-terminal"] $ws1
# assign [class="(?i)firefox"] $ws2
# assign [class="Thunar"] $ws3

for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="Pamac-manager"] floating enable

# --- ABLAK KERET SZÍNEK ---
client.focused          $focus-color   $focus-color   $text-color    #807dfe
client.unfocused        #222222        #222222        #888888        #222222
client.urgent           $urgent-bg-color $urgent-bg-color $text-color #e1b700

# --- AZ i3BAR BEÁLLÍTÁSA ---
bar {
    font pango: Noto Sans Regular 10
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position top
    tray_padding 5
    tray_output HDMI-3
    
    # Ezt átállítottam 'no'-ra, mivel most már csak tiszta számaid vannak
    strip_workspace_numbers no 

    colors {
        separator          #717171
        background          #1a1a1a
        statusline          #ffffff

        # Kiemelés: a focused_workspace a $focus-color-t (lila) használja
        focused_workspace  #807dfe      #807dfe      #ffffff
        active_workspace   #444444      #444444      #ffffff
        inactive_workspace #1a1a1a      #1a1a1a      #888888
        urgent_workspace   #e53935      #e53935      #ffffff
    }
}
