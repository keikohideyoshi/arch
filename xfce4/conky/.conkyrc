conky.config = {
  -- Gap between borders of screen and text
  alignment = 'top_right',
  gap_x = 50,
  gap_y = 0,

  -- Use Xft?
  use_xft = true,

  -- Xft text alpha
  xftalpha = 0.8,
  
  -- Use a custom font if you want. This example uses a default font.
  -- font = 'Terminus:size=10',

  -- Update interval in seconds
  update_interval = 1.5,

  -- Create own window instead of using desktop (required in nautilus)
  own_window = true,
  own_window_transparent = true,
  own_window_argb_visual = true,
  own_window_argb_value = 255,
  own_window_type = 'desktop',
  own_window_class = 'conky-semi',
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

  -- Use a background image (requires `background = true`)
  background = true,

  -- Use double buffering (reduces flicker, may not work for everyone)
  double_buffer = true,

  -- Minimum size of text area
  minimum_width = 300,
  minimum_height = 200,

  -- Maximum width of widget
  maximum_width = 350,

  wrap_text = true, 

  -- Draw shades?
  draw_shades = true,

  -- Draw outlines?
  draw_outline = false,

  -- Draw borders around text
  draw_borders = false,
  draw_graph_borders = true,

  -- Default colors and also border colors
  default_color = 'white',
  color2 = '9fee62', -- System is up to date
  color3 = 'ff4343', -- Red - Number of Updates Available
  default_shade_color = 'black',
  default_outline_color = 'white',

  -- Text alignment, other possible values are commented
  alignment = 'top_right',

  -- Subtract file system buffers from used memory?
  no_buffers = true,

  -- Set to yes if you want all text to be in uppercase
  uppercase = false,

  -- Number of cpu samples to average
  cpu_avg_samples = 2,

  -- Force UTF8? note that UTF8 support required XFT
  override_utf8_locale = true,

  -- Width and thickness of ${hr 2} bar separator
  default_bar_size = {150, 5},

  -- imlib_cache_size
  imlib_cache_size = 0,

  -- Distance of text from edge of widget
  border_outer_margin = 10,
};

